{
  "name": "ollama",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu20.04",
  "features": {
    "ghcr.io/devcontainers/features/nvidia-cuda:1": {
      "cudaVersion": "12.2"
    },
    "./features/preinstall-extensions": {
      "extensions": [
        "Maimonator.gpu-monitor"
      ]
    },
    "./features/ollama": {
      "models": [
        "codellama:34b",
        "dolphin-mixtral:8x7b",
        "llama2:13b",
        "llama2-uncensored:7b",
        "mistral:latest",
        "mistral-openorca",
        "mixtral:8x7b",
        "nomic-embed-text",
        "nous-hermes2-mixtral:8x7b",
        "stable-code:latest",
        "stable-code:3b-instruct-q8_0",
        "starcoder:3b",
        "starcoder2:3b"
      ]
    }
  },
  "shutdownAction": "none",
  "hostRequirements": {
    "gpu": true
  },
  "runArgs": [
    "--name=ollama",
    "--hostname=ollama",
    "--gpus=all",
    "--net=host"
  ]
}
